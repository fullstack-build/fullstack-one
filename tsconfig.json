{
  "compileOnSave": false,
  "compilerOptions": {
    "lib": ["es2019", "esnext.bigint", "es2020.string", "es2020.symbol.wellknown"],
    "target": "es2019",
    "module": "commonjs",
    "types": ["node"],
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "declaration": false,
    "outDir": "./dist",
    "strict": true,
    "suppressImplicitAnyIndexErrors": true,
    "allowSyntheticDefaultImports": true
  },
  "exclude": [
    "node_modules",
    "dist",
    "test"
  ],
  "include": [
    "src", "index.ts"
  ]
}