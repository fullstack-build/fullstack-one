{
  "compileOnSave": false,
  "compilerOptions": {
    "lib": [
      "es2019",
      "esnext.bigint",
      "es2020.string",
      "es2020.symbol.wellknown"
    ],
    "target": "es2019",
    "module": "commonjs",
    "types": ["node"],
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "declaration": false,
    "outDir": "./dist",
    "strict": true,
    "suppressImplicitAnyIndexErrors": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    // when running in monorepo root
    "modules/**/src/*.ts",
    "modules/**/src/**/*.ts",
    "examples/**/src/*.ts",
    "examples/**/src/**/*.ts",
    // When running inside of a module/package
    "src/*.ts",
    "src/**/*.ts"
  ],
  "exclude": ["node_modules","**/node_modules", "**/dist", "**/test", "*.test.ts"]
}
